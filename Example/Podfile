    pod 'PromiseKit'                      #ÂºÇÊ≠•Â§ÑÁêÜ

    pod 'NIMSDK'                          #ÁΩëÊòì‰∫ë‰ø°
    pod 'Toast', '~> 3.0'                 #ÁΩëÊòì‰∫ë‰ø°(NIMKit‰æùËµñÁî®)
    pod 'SVProgressHUD', '~> 2.0.3'       #ÁΩëÊòì‰∫ë‰ø°(NIMKit‰æùËµñÁî®)
    pod 'M80AttributedLabel', '~> 1.6.3'  #ÁΩëÊòì‰∫ë‰ø°(NIMKit‰æùËµñÁî®)
    pod 'TZImagePickerController'         #ÁΩëÊòì‰∫ë‰ø°(NIMKit‰æùËµñÁî®)

    pod 'FTPopOverMenu_Swift'             #ÂºπÂá∫ËèúÂçï
    pod 'Qiniu'                           #‰∏ÉüêÇ
    pod 'GSKStretchyHeaderView'
    
    pod 'CFBannerView', '~> 0.0.4'        # ËΩÆÊí≠ÂõæÁâá
    pod 'CFCenterItemViews', '~> 0.1.0'   # ÂõæÁâáÂ±Ö‰∏≠ÂàÜÂ∏É
    pod 'CFExtension', '~> 0.2.1'         # Êâ©Â±ï
    pod 'CFWebImage', '~> 0.1.2'          # ÂõæÁâáÂä†ËΩΩ
